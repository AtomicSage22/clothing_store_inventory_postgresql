<html>
<head>
    <title>Categories</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>All Categories</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category => { %>
                <tr">
                    <td><%= category.name %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <a class="addButton" href="/categories/add">Add New Category</a>
</html>