<!-- src/views/products/index.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Products</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Assuming you have a CSS file -->
</head>
<body>
    <h1>All Products</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th onclick="window.location.href = `/categories`">Category</th>
                <th onclick="window.location.href = `/brands`">Brand</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
                <tr onclick="window.location.href = `/product/<%=product.id%>`">
                    <td><%= product.name %></td>
                    <td><%= product.description %></td>
                    <td><%= product.category_name %></td> <!-- Display the category name -->
                    <td><%= product.brand_name %></td> <!-- Display the brand name -->
                    <td><%= product.price %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <a class="addButton" href="/product/add">Add New Product</a>
</body>
</html>
